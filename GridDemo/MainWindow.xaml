<Window x:Class="GridDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridDemo"
        mc:Ignorable="d"
        Title="Grid and Splitter Demo" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Definitions for two columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- First Grid -->
        <TextBlock Grid.Column="0" Background="LightBlue" Text="First space" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- First Gridsplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" 
                      Background="Gray" ResizeBehavior="PreviousAndNext"/>

        <!-- Second Gridsplitter -->
        <TextBlock Grid.Column="2" Background="LightGreen" Text="Second space" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
